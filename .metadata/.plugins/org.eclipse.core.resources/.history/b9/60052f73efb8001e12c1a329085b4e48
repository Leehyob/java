package ex02;

import java.util.Scanner;

public class Exam3 {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		System.out.println("--------------------------------");
		System.out.println("1.예금 | 2.출금 | 3.잔고 | 4.종료");
		System.out.println("--------------------------------");
		
		for(int i=1; i<=50; i++); {
			
			System.out.print("선택 > ");
			int choose = input.nextInt();
			
			switch (choose) {
			case 1 :
				System.out.print("예금액 > ");
				int yegeum = input.nextInt();
			break;
			case 2 :
				System.out.print("출금액 > ");
				int chulgeum = input.nextInt();
				break;
			case 3 :
				System.out.print("잔고 > ");
				int jango = input.nextInt();
			break;			
			default :
				System.out.print("프로그램 종료");
			
				
			}
		}
		
	}

}
